<div class="container bg-[#34495E] w-full mt-24 p-12 m-auto rounded-lg max-h-full shadow-lg shadow-gray-400">
  <h1 class="text-white text-2xl font-semibold mb-4">Edit Category Details</h1>

  <%= form_with model: @category do |form| %>
    <div class="mb-4">
      <label for="categories_name" class="text-white">Categories Name</label>
      <%= form.text_field :categories_name, class: "w-full p-2 rounded-md" %>
    </div>
    
    <div class="mb-4">
      <label for="description" class="text-white">Categories Description</label>
      <%= form.text_area :description, class: "w-full p-2 rounded-md" %>
    </div>
    
    <div class="mb-4">
      <%= form.submit 'Update Category', class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to 'Go to Dashboard', dashboard_path, class: "bg-green-500 text-white px-4 py-2 rounded-md" %>
  </div>
</div>
